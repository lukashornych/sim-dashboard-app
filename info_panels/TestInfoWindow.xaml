<Window x:Class="dashboardapp.TestInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dashboardapp"
        mc:Ignorable="d"
        Title="Test data info panel" Height="269.017" Width="168" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel Margin="5,5,5,0">
        <TextBlock Text="Speed (KMH):"/>
        <TextBlock Text="{Binding Speed}" Foreground="Red" Margin="0,0,0,5"/>

        <TextBlock Text="RPM:"/>
        <TextBlock Text="{Binding Rpm}" Foreground="Red" Margin="0,0,0,5"/>

        <TextBlock Text="Max RPM:"/>
        <TextBlock Text="{Binding MaxRpm}" Foreground="Red" Margin="0,0,0,5"/>

        <TextBlock Text="Gear:"/>
        <TextBlock Text="{Binding Gear}" Foreground="Red" Margin="0,0,0,5"/>

        <TextBlock Text="Blinkers:"/>
        <TextBlock Text="{Binding Blinkers}" Foreground="Red" Margin="0,0,0,5"/>

        <TextBlock Text="Test:"/>
        <TextBlock Text="{Binding Test}" Foreground="Red" Margin="0,0,0,5"/>
    </StackPanel>
</Window>
